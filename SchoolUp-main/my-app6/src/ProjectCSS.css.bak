/* Основа страницы */

.App {
	text-align: center;
	background-color: #EEF6F6;
	height: 100vh;
	font-size: 22px;
	display: flex;
	flex-direction: column;
	
	justify-content: center;
	align-items: center;
}

.pages {
	background-color: #D4E4EF;
	height: 100vh;
}

/* Верхняя панель на странице */

.topPanel {
	background-color: #EEF6F6;
	border: 0.5px solid #D4E4EF;
	height: 7vh;
	width: 210vh;
}

.topButtons{
	/* background: #A1C2DA;
	border: 1px solid #A1C2DA; 
	*/
	background: #D4E4EF;
	border: 1px solid #D4E4EF;
	
	font-size: 2vh;
	width: 19vh;
	height: 5.5vh;
	
	position: sticky;
	top: 2vh;
}

.icon {
	height: 35px;
	position: relative;
	top: 2vh;
}

/* Основа основного интерфейса, шаблоны */

.LeftPanel {
	//background: #C2D9EA;
	width: 20vh;
	height: 20vh;

	font-size: 15px;
	
	margin-top: 4vh;
	margin-left: 33.5vh;
}

.leftButtons {
	background: #D4E4EF;
	border: 1px solid #D4E4EF;
	
	text-align: left;
	
	width: 20vh;
	height: 3vh;
}

.main {
	background: #EEF6F6;
	width: 140vh;
	height: 85vh;
	margin-left: 53.5vh;
	margin-top: 2vh;
	position: absolute;
	bottom: 3vh;
	
	border: 1px solid #D4E4EF;
	border-radius: 20px;
	
}

/* Авторизация */

.Login {
	border: 1px solid #000000;
	border-radius: 28px;
	background-color: #C4C4C4;
	height: 20vh;
	width: 35vh;
	
	text-align: center;
	align-items: center;
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	font-size: 3vh;
}

.Login-error-text{
	color: red;
	font-size: 15px;
	position: absolute;
	
}

/* Профиль пользователя */

.Profile {
	font-size: 20px;
	
	background: #EEF6F6;
	width: 50vh;
	height: 85vh;
	margin-left: 83vh;
	margin-top: 2vh;
	position: absolute;
	bottom: 3vh;
	
	border: 1px solid #D4E4EF;
	border-radius: 20px;
	
	
}

.profButtons{
	background: #D4E4EF;
	border: 1px solid #D4E4EF;
	
	text-align: left;
	
	width: 20vh;
	height: 4vh;
}

.infoClass{
	text-align: center;
	//background-color: #C4C4C4;
	margin-left: auto;
	margin-right: auto;
	margin-top: 2vh;
	height: 15vh;
	width: 35vh;
	border: 2px solid #D4E4EF;
	border-radius: 20px;
}

.infoRole {
	text-align: center;
	//background-color: #C4C4C4;
	margin-left: auto;
	margin-right: auto;
	margin-top: 2vh;
	height: 15vh;
	width: 35vh;
	border: 2px solid #D4E4EF;
	border-radius: 20px;
}


